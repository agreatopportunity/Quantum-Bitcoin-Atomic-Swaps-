{
  "name": "quantum-atomic-swaps",
  "version": "2.0.0",
  "description": "Quantum-safe cross-chain atomic swaps using Winternitz One-Time Signatures",
  "main": "server.js",
  "scripts": {
    "start": "node server.js",
    "dev": "nodemon server.js",
    "test": "jest --coverage --detectOpenHandles",
    "test:watch": "jest --watch",
    "test:crypto": "jest tests/crypto.test.js",
    "test:htlc": "jest tests/htlc.test.js",
    "test:funding": "jest tests/funding.test.js",
    "lint": "eslint lib/ server.js"
  },
  "keywords": [
    "atomic-swap",
    "quantum-safe",
    "winternitz",
    "bitcoin",
    "bsv",
    "solana",
    "htlc",
    "cross-chain"
  ],
  "author": "Young / TRU Blockchain",
  "license": "MIT",
  "dependencies": {
    "express": "^4.18.2",
    "cors": "^2.8.5",
    "axios": "^1.6.0",
    "dotenv": "^16.3.1",
    "uuid": "^9.0.0",
    "bs58check": "^3.0.1",
    "better-sqlite3": "^9.2.2"
  },
  "devDependencies": {
    "jest": "^29.7.0",
    "nodemon": "^3.0.1",
    "eslint": "^8.54.0"
  },
  "jest": {
    "testEnvironment": "node",
    "verbose": true,
    "collectCoverageFrom": [
      "lib/**/*.js"
    ],
    "coverageThreshold": {
      "global": {
        "branches": 50,
        "functions": 50,
        "lines": 50
      }
    },
    "testTimeout": 10000
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
